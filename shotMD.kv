

Screen:
    NavigationLayout:
        ScreenManager:
            LoginScreen:
#                name: 'login'
                BoxLayout:
                    orientation: 'vertical'

            MainScreen:
                name: 'main'
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        title: 'Shot Squads'
                        left_action_items: [["menu", lambda x: nav_draw.set_state("open")]] # toggle nav_draw is deprecated (unlikely
                        # to be supported in the future)

                    Widget: # this widget keeps the toolbar from going to the bottom



                    MDBottomAppBar:
                        MDToolbar:
                            icon: 'note-plus'

        MDNavigationDrawer:
            id: nav_draw
            BoxLayout:
                orientation: 'vertical'
                Image: # Kivy keyword for adding an image
                    source: '1596215229234.jpg'
                MDLabel:
                    text: "New Patient"
                    font_style: 'Subtitle2'
                    height: self.texture_size[1]
                    pos_hint:

                ScrollView: # forces all objects to the top

<LoginScreen>:
    name: 'login'

    # instantiate kivy objects
    username: username
    password: user_password

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Login'
        Widget:

    MDRaisedButton:
        text: 'Login'
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        on_press: root.btn()
#        on_release: if root.btn() is True: root.manager.current = 'main'
    MDLabel:
        text: 'Username:'
        font_style: "Button"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
    MDLabel:
        text: 'Password:'
        font_style: "Button"
        pos_hint: {"center_x": 0.5, "center_y": 0.57}

    MDTextField: # text field for 'Username'
        id: username
        pos_hint: {"center_x": 0.80, "center_y": 0.65}
        helper_text: "Enter your username:"
        helper_text_mode: "on_focus"

    MDTextField: # text field for 'Password'
        id: user_password
        password: True
        pos_hint: {"center_x": 0.80, "center_y": 0.58}
        helper_text: "Enter your password:"
        helper_text_mode: "on_focus"






<MainScreen>:
    name: 'main'