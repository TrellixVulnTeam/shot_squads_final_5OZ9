

Screen:
    NavigationLayout:
        ScreenManager:
            LoginScreen:
#                name: 'login'
                BoxLayout:
                    orientation: 'vertical'

            MainScreen:
                name: 'main'
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        title: 'Shot Squads'
                        left_action_items: [["menu", lambda x: nav_draw.set_state("open")]] # toggle nav_draw is deprecated (unlikely
                        # to be supported in the future)

                    Widget: # this widget keeps the toolbar from going to the bottom



                    MDBottomAppBar:
                        MDToolbar:
                            icon: 'note-plus'

        MDNavigationDrawer:
            id: nav_draw
            BoxLayout:
                orientation: 'vertical'
                Image: # Kivy keyword for adding an image
                    source: '1596215229234.jpg'
                MDLabel:
                    text: "New Patient"
                    font_style: 'Subtitle2'
                    height: self.texture_size[1]
                    pos_hint:

                ScrollView: # forces all objects to the top

<LoginScreen>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Login'
        Widget:
    MDRaisedButton:
        text: 'Login'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
#        size_hint: (10, 15)
        on_press: root.manager.current = 'main'
    MDLabel:
        text: 'Username:'
        font_style: "Button"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
    MDLabel:
        text: 'Password:'
        font_style: "Button"
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
    MDTextField:
        pos_hint: {"center_x": 0.80, "center_y": 0.65}



<MainScreen>:
    name: 'main'